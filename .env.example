# eQabo.com Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Required: OpenAI API Key for AI chat functionality
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Required: Supabase Configuration for escalation logging
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: Backend API Configuration
BACKEND_API_URL=https://your-backend-api-url.com/api/
BACKEND_API_KEY=your_backend_api_key_here

# Optional: Database Configuration (for booking storage)
#DATABASE_URL=your_database_connection_string_here

# Optional: Notification Services
SMS_API_KEY=your_sms_service_api_key_here
EMAIL_API_KEY=your_email_service_api_key_here

# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# Environment
NODE_ENV=development