{
  "name": "eqabo-telegram-bot",
  "version": "1.0.0",
  "description": "eQabo.com - Ethiopia's AI Hotel Booking Assistant Telegram Bot",
  "main": "src/bot.js",
  "type": "module",
  "scripts": {
    "start": "node src/bot.js",
    "start:api": "node src/api/bookingApi.js",
    "start:both": "concurrently \"npm run start\" \"npm run start:api\"",
    "dev": "nodemon src/bot.js",
    "dev:api": "nodemon src/api/bookingApi.js",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "echo 'No build step required for Node.js serverless functions'",
    "vercel-build": "echo 'Vercel build completed'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:health": "node test-health.js",
    "test:api": "node test-booking-api.js",
    "test:booking": "node test-booking-flow.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "validate": "npm run lint && npm run format:check",
    "prestart": "echo 'Skipping validation for deployment'",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "keywords": [
    "telegram",
    "bot",
    "hotel",
    "booking",
    "ethiopia",
    "eqabo",
    "assistant",
    "multilingual"
  ],
  "author": "eQabo.com",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "@vercel/node": "^3.0.0",
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "franc": "^6.2.0",
    "helmet": "^7.2.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "openai": "^4.24.1",
    "pdfkit": "^0.17.2",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "sharp": "^0.34.4",
    "telegraf": "^4.15.4",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitbirr/telegrambot.git"
  },
  "homepage": "https://eqabo.com",
  "bugs": {
    "url": "https://github.com/bitbirr/telegrambot/issues",
    "email": "support@eqabo.com"
  },
  "funding": {
    "type": "individual",
    "url": "https://eqabo.com"
  }
}
